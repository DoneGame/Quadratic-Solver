#include <stdio.h>
#include <math.h>
#include <assert.h>

const int INF_ROOTS = -1;
const double precision = 0.00001;

int SolveQuadraticEquation (double a, double b, double c, double *x1, double *x2);
int SolveLinearEquation (double a, double b, double *x);
int NonZero (double x);

int main() {
    double a = 0, b = 0, c = 0;

    printf("# Second order equation solver\n");
    printf("# a*x^2 + b*x + c = 0\n");

    GetCoefs (&a, &b, &c);

    double x1 = 0, x2 = 0;
    int n_roots = SolveQuadraticEquation (a, b, c, &x1, &x2);

    PrintResults (n_roots, x1, x2);

}

void GetCoefs(double *a, double *b, double *c) {

    printf("# Enter a, b, c: ");
    while (scanf("%lg %lg %lg", a, b, c) != 3) {
        int s = '\0';
        while ((s = getchar()) != '\n' && s != EOF);  // clear buffer

        printf("# Incorrect format. Enter a, b, c: ");
    }

}

int SolveQuadraticEquation (double a, double b, double c,
                            double *x1, double *x2) {

    assert(isfinite(a));
    assert(isfinite(b));
    assert(isfinite(c));
    assert(x1 != x2);

    if (NonZero(a)) {
        double D = b*b - 4*a*c;

        if (NonZero(D)) {
            if (D < 0) return 0;

            double sqrt_D = sqrt(D);

            *x1 = (-b + sqrt_D) / (2*a);
            *x2 = (-b - sqrt_D) / (2*a);

            assert(isfinite(*x1));
            assert(isfinite(*x2));

            return 2;
        }


        *x1 = *x2 = -b / (2*a);

        assert(isfinite(*x1));

        return 1;
    }

    return SolveLinearEquation (b, c, x1);
    *x2 = *x1;

}

int SolveLinearEquation (double a, double b, double *x) {

    if (NonZero(a)) {
        *x = -b / a;

        assert(isfinite(*x));

        return 1;
    }

    if (NonZero(b)) return 0;
    else return INF_ROOTS;

}

void PrintResults (int n_roots, double x1, double x2) {
    switch (n_roots) {
        case 0:         printf("No roots");
                        break;

        case 1:         printf("x = %.5lg", x1);
                        break;

        case 2:         printf("x1 = %.5lg\n"
                               "x2 = %.5lg", x1, x2);
                        break;

        case INF_ROOTS: printf("Infinite number of roots");
                        break;

        default:        printf("main(): n_roots is incorrect");
    }
}

int NonZero (double x) {return (fabs(x) > precision) ? 1 : 0;}
